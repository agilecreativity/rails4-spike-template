source 'https://rubygems.org'

ruby '2.0.0'
gem 'rails', '4.0.2'

gem 'pg'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

group :development, :test do
  gem 'awesome_print'
  gem 'gem-ctags'
  gem 'guard-rspec'
  gem 'pry'
  gem 'pry-debugger'
  gem 'pry-editline'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the app server
gem 'unicorn'

